<?xml version="1.0" encoding="utf-8"?>

                                                        
                                                   

    

                 
                       
                                                                         
           

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/userHolder"
            android:orientation="horizontal" android:tag="layout/user_list_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:bind="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_little_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:tag="binding_1"             
                app:civ_border_width="1dp"
                app:civ_border_color="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_2"                                    
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                tools:text="Aleshchenko Alexander"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/user_little_photo"
                android:layout_toEndOf="@+id/user_little_photo" />

            <TextView
                android:id="@+id/country_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_3"   
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/borderGrayLight"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/user_name"
                android:layout_alignStart="@+id/user_name" />
        </RelativeLayout>
         